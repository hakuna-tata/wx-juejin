.profile {
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 40rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.profile .info {
  display: flex;
  flex: 1;
  font-size: 24rpx;
  color: #abb4bf;
}

.profile .info > image {
  width: 90rpx;
  height: 90rpx;
  margin-right: 40rpx;
}

.profile .info .text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.profile .info .text .name {
  font-size: 40rpx;
  color: #333;
}

.profile .more {
  display: flex;
  align-items: center;
}
.profile .more image {
  width: 20rpx;
  height: 40rpx;
}